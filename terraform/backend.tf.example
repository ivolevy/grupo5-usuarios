# Ejemplo de configuración de backend
# Copia este archivo a backend.tf y configura según tu necesidad

# Opción 1: Backend en AWS S3
terraform {
  backend "s3" {
    bucket         = "tu-terraform-state-bucket"
    key            = "usuarios-app/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}

