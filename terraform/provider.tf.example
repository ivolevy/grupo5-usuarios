# Ejemplo de configuraci√≥n de providers
# Copia las secciones que necesites a provider.tf

# Provider de Vercel
# Requiere: VERCEL_API_TOKEN como variable de entorno o en terraform.tfvars
provider "vercel" {
  api_token = var.vercel_api_token
  team      = var.vercel_team_id  # Opcional
}

# Provider de AWS
# Requiere: AWS_ACCESS_KEY_ID y AWS_SECRET_ACCESS_KEY como variables de entorno
# O configura: aws configure
provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = "usuarios-app"
      Environment = var.environment
      ManagedBy   = "terraform"
    }
  }
}

# Provider de Google Cloud
# Requiere: gcloud auth application-default login
provider "google" {
  project = var.gcp_project_id
  region  = var.gcp_region
}

